<div class="sign-in-main">
 <div  class="title"><h2>ログイン</h2></div>
 
 <div class="sign-in-contents">
 <%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
  <div class="sign-in-field">
    <label class="sign-in-label">メールアドレス</label>
  </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-box-s" %>
  
  <div class="sign-in-label">
    <label class="sign-in-label">パスワード</label>
  </div>
    <%= f.password_field :password, autocomplete: "current-password", class: "text-box-s" %>

  <% if devise_mapping.rememberable? %>
    <div class="sign-in-label">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="sign-in-actions">
    <%= f.submit "ログイン", class:"sign-in-btn" %>
  </div>
 <% end %>
 
 </div>

 <div class='top-link'>
   <%= link_to image_tag("link-top.png", class: "top-icon"), "/" %>
 </div>
</div>

